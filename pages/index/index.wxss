/**index.wxss**/
@import '../../iconfont/iconfont.wxss';
page{height: 100%;}
.container{
  align-self:flex-start
}
.map{
  width:100%;
  height: 700rpx;
  position: relative;
}
.distance{
  position: fixed;
  top:16rpx;
  right:2rpx;
  background:#ED1B1C;
  color:#fff;
  width:238rpx;
  height:70rpx;
  overflow: hidden;
  font-size:32rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
}
.distance text{
  display: block;
  padding:12rpx 20rpx 16rpx 20rpx;
}
.icon{
  width:120rpx;
  height:120rpx;
  color:black
}
.title{
  text-align: center;
  padding-top:20rpx;
}
.icon-dw{
  font-size: 38rpx;
  color:#B2B1B1;
  margin-right: 12rpx;
}
.red{
  color:#ED1B1C;
  font-weight: bold;
  font-size:34rpx;
  display: inline-block;
}
/*搜索*/
.search-main{
  width: 100%;
  display: flex;
  line-height: 60rpx;
}
.search{
  width:80%;
  height:60rpx;
  border:solid 1px #d5d5d5;
  border-radius: 32rpx;
  margin: 20rpx 0 20rpx 20rpx;
  vertical-align: top;
}
.icon-search{
  margin-left:32rpx;
  margin-top:16rpx;  
}

.search-main view:nth-child(1){
  flex: 5
}
.search-main view:nth-child(2){
  flex:1; 
  align-self: center;
  margin-left:20rpx;
}
.sousuo{
  width: 70%;
  display: inline-block;
  margin-left:100rpx;
  padding-top:1rpx;
  text-align: left;
  color:#DFDBDB;
  vertical-align: top;
}
/*菜单*/
.menu {
  display: flex;
  width:98%;
  font-size:32rpx;
  line-height: 62rpx;
}
.active{
  color:#ffffff;
  background:#ED1B1C;
  border-radius:10rpx;
}
.menu text{
  flex:1;
  text-align: center;
}
/*商品*/
.googs-list{
  padding-bottom:210rpx;
}
.goods{
  margin:20rpx auto 20rpx auto;
  display: flex;
  width:90%;
  padding:2%;
  border:solid 1px #ccc;
  border-radius: 30rpx;
}
.goods image{
  width:184rpx;
  height:180rpx;
  align-self: center;
  margin:0 20rpx 0 0;
}
.goods-info{
  flex:5;
  font-size:28rpx;
  max-width:440rpx;
  min-width: 380rpx;
}
.km{
  flex:1;
  color:#ccc;
  align-self: center;
  font-size:28rpx;
  text-align: right;
}
.goods-text{
  font-size:28rpx;
  color:#7d7d7d;
  line-height: 48rpx;
}
.goods-text view{display: flex;}
.goods-text text{
  flex:1;
  text-align: left;
}
.goods-title{
  font-size:32rpx;
  font-weight: bold;
  width: 99%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.f-hui{
  color:7D7D7D
}
.red2{
  color:#ED1B1C
}

/**底部分类**/
.menus{
  
  width: 100%;
  position: fixed;
  bottom:52rpx;  
  background:#f6f6f6;
  height:70rpx;
  overflow: hidden;
}
.menus-text{
  line-height: 52rpx;
  display: flex;  
  flex-wrap: wrap;
  justify-content:space-around;
  flex-direction: row;
}
.menus text{
  margin-top:8rpx;
  width:20%;
  text-align: center;
  color:#999;
  border:solid 1px #ccc;
  border-radius:10rpx;
  background:#fff;
}
.menus text.active{
  background:rgb(237, 128, 27)!important;
  color:#fff;
}
.red-bottom{
  background: #ED1B1C;
  color:#fff;
  text-align: center;
  width:100%;
  height: 52rpx;
  line-height: 52rpx;
  position: fixed;
  bottom:0;
  left:0;
  
}
.red-bottom text{
  background: none;
  border:none;
  color:#fff;
  font-size:36rpx;
}
/*底部end*/