<!--index.wxml-->
<view class="container">
  <view class="map" wx:if="{{menuPosition.top}}">
  <map
      id="myMap"
      style="width: 100%; height: 240px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location      
    >
    </map>
    <view class="distance">
      <view class="section">
        <picker bindchange="bindChanges" value="{{index}}" range="{{site}}">
          <view class="picker">
            距离为：{{siteText}}
          </view>
        </picker>
      </view>
    </view>
  </view> 
  <view class="main" style="margin-top:{{mainTop}}">
  <view class="title">
    <text class="iconfont icon-ziyuan icon-dw"></text>
    <text class="red">附近的地摊</text> 
  </view>
  <view class="search-main">
    <view class="search">
      <icon type="search" size="16" class="icon-search"></icon>
      <view class="sousuo" bindtap="goSearch">请输入商品名称或店铺</view>
    </view>    
    <view class="red">搜索</view>
  </view>
  <view class="menu">
    <text class="{{typeIndex ==index?'active': ''}}" data-index="{{index}}" bindtap="getType" wx:for="{{type}}" wx:key="index">{{item}}</text>
  </view>
  <!---产品列表-->
  <view class="googs-list">
   <view class="goods">
    <view class="goods-pic">
      <image src="../../imgs/gg1.png" mode="widthFix"></image>
    </view>
    <view class="goods-info">
      <view class="goods-title">1111扬州新鲜荔枝</view>
      <view class="goods-main">
      <view class="goods-text"> 
        <view>味道：甜</view>  
        <view>
          <text  class="red2">现价：10.00</text>
          <text>原价： 100.00</text>
        </view>    
      <view>发布日期：2020-05-02</view>
      <view>营业时间：10:00-20:00</view>    
      </view>
      <view class="km">10km</view>
      </view>
    </view>
      
    </view>

    <view class="goods" wx:for="{{goodsList}}" wx:key="index" 
    data-id="{{item.id}}" 
    data-latitude="{{latitude}}"
    data-longitude="{{longitude}}"
    data-markers="{{markers}}"
    data-covers="{{covers}}" 
    bindtap="goDetail">
      <view class="goods-pic">
      <image src="../../imgs/gg2.png" mode="widthFix"></image>
      </view>
      <view class="goods-info">
        <view class="goods-title">{{item.title}}</view>
        <view class="goods-main">
        <view class="goods-text"> 
          <view>{{item.dis}}</view>  
          <view>
            <text  class="red2">现价：{{item.newPrice}}</text>
            <text>原价： {{item.oldPrice}}</text>
          </view>    
        <view>发布日期：{{item.postTime}}</view>
        <view>营业时间：{{item.openTime}}</view>    
        </view>
        <view class="km">10.00km</view>
        </view>
      </view>      
    </view>  
   <view class="goods">
   <view class="goods-pic">
    <image src="../../imgs/gg4.png" mode="widthFix"></image>
    </view>
    <view class="goods-info">
      <view class="goods-title">11111石英表，时间精准，防水</view>
      <view class="goods-main">
      <view class="goods-text"> 
        <view>味道：甜</view>  
        <view>
          <text  class="red2">现价：10</text>
          <text>原价： 100</text>
        </view>    
      <view>发布日期：2020-05-02</view>
      <view>营业时间：10:00-20:00</view>    
      </view>
      <view class="km">10km</view>
      </view>
    </view>
    
  </view>

  <view class="goods">
    <view class="goods-pic">
    <image src="../../imgs/gg5.png" mode="widthFix"></image>
    </view>
    <view class="goods-info">
      <view class="goods-title">111正宗无锡阳山水蜜桃应季</view>
      <view class="goods-main">
      <view class="goods-text"> 
        <view>味道：甜</view>  
        <view>
          <text  class="red2">现价：10</text>
          <text>原价： 100</text>
        </view>    
      <view>发布日期：2020-05-02</view>
      <view>营业时间：10:00-20:00</view>    
      </view>
      <view class="km">10km</view>
      </view>
    </view>    
  </view>
  </view>
  </view>
  <!---产品列表 end-->
  <view class="menus" style="bottom: {{menuPosition.bottom}}; top: {{menuPosition.top}}">
    <view class="menus-text" >  
       <text wx:for="{{goodsTypeList}}" wx:key="index" data-goTypeIndex="{{index}}"    
       bindtap="goGoodsType" class="{{navIndex==index ? 'active': ''}}">{{item.name}}</text>
    </view>    
  </view>
  <view class="red-bottom" style="bottom:{{redBottom.bottom}}; top: {{redBottom.top}}" bindtap="goTop">
    <text class="iconfont icon-shuangjiantouxia"></text>
  </view>
  <view class="bottom-tabbar">
    <view class="my" bindtap="goMy">
      <text class="iconfont icon-wode"></text>
    </view>
    <view class="publish" bindtap="goPublist">发布</view>
  </view>
</view>

