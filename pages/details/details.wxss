/* pages/details/details.wxss */
@import "iconfont.wxss";
.detailsPage{
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #e1e1e1;
}
.banner{
  height:500rpx;
  /* background-color: aqua; */
  display: flex;
  flex-direction: column;
  position: relative;
  margin-bottom: 20rpx;
}
.goodsInfo{
  height:420rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  padding: 0 60rpx;
  box-sizing: border-box;
}
.contactBox{
  height:360rpx;
  background-color: #fff;
  margin-top:20rpx ;

}
.mapBox{
  height:550rpx;
  background-color: mediumturquoise;
}
.banner>swiper{
  width:100%;
  height:500rpx;
  
}
.banner>swiper image{
  width:100%;
  height:500rpx;
}
/* button{
  border:0;
  padding: 0;
  margin: 0;
} */
.btnCollection,.btnShare{
    position: absolute;
    width:150rpx;
    height:60rpx;
    top:40rpx;
    border:1px solid #ddd;
    box-shadow: 1px 1px 0px 0px #ddd;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 10rpx;
    font: 600 28rpx/60rpx "微软雅黑";
    color:#ed2526;
    border-radius: 20rpx;
}
.btnCollection{
  right:180rpx;
  display:flex;
}
.btnShare{
  right:10rpx;
  display:flex;
}
/* .btnCollection icon,.btnShare icon{
  margin-bottom:8rpx;
} */
.btnCollection text,.btnShare text{
  margin-left:10rpx;
}

.userName{
  font:40rpx/60rpx "微软雅黑";
  color: #000;
}
.goods{
  font:32rpx/50rpx "微软雅黑";
  color: #000;
  display: flex;
  justify-content: space-between;
}
.goodsStatus{
  color:#ed2526;
}
.goodsPice{
  color:#ed2526;
  font:28rpx/50rpx "微软雅黑";
}
.site,.time{
  font:28rpx/50rpx "微软雅黑";
  color:#cac6c6;
  
}

.price{
  margin-left:30rpx;
}
.goodsDic{
  font-size: 28rpx;
}
.goodsDic text{
  font:28rpx/50rpx "微软雅黑";
  text-indent: 2em;
}

.contact{
  height:68rpx;
  background-color:#ed2526 ;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color:#fff;
  line-height:68rpx;
  font-family:'微软雅黑';
  margin-top:20rpx ;
}
.contact icon{
  width:68rpx;
  height:68rpx;
  color:#fff;
  line-height:68rpx;
  font-family:'微软雅黑';
  margin-top:4rpx ;
}


.contactInfo{
  height:110rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}
.iconLef{
  width: 92rpx;
  height:92rpx;
  background-color: #ed2526;
  border-radius: 50%;
  font-size: 70rpx;
  color:#fff;
  text-align: center;
  line-height:70rpx;
}
.call{
  height:60rpx;
  width:132rpx;
  border:1px solid #f87979;
  border-radius: 10rpx;
  background-color: #ed2526;
  text-align: center;
  line-height:60rpx;
  color:#fff;
}
