/* pages/details/details.wxss */
@import "iconfont.wxss";
.detailsPage{
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #e1e1e1;
}
.banner{
  height:500rpx;
  background-color: aqua;
  display: flex;
  flex-direction: column;
  position: relative;
}
.goodsInfo{
  height:420rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  padding: 0 60rpx;
  box-sizing: border-box;
}
.contactBox{
  height:360rpx;
  background-color: brown;
}
.mapBox{
  height:550rpx;
  background-color: mediumturquoise;
}
.banner>swiper{
  width:100%;
  height:500rpx;
}
.banner>swiper image{
  width:100%;
  height:500rpx;
}
/* button{
  border:0;
  padding: 0;
  margin: 0;
} */
.btnCollection,.btnShare{
    position: absolute;
    width:150rpx;
    height:60rpx;
    top:40rpx;
    border:1px solid #ddd;
    box-shadow: 1px 1px 0px 0px #ddd;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 10rpx;
    font: 600 28rpx/60rpx "微软雅黑";
    color:#ed2526;
    border-radius: 20rpx;
}
.btnCollection{
  right:180rpx;
  display:flex;
}
.btnShare{
  right:10rpx;
  display:flex;
}
/* .btnCollection icon,.btnShare icon{
  margin-bottom:8rpx;
} */
.btnCollection text,.btnShare text{
  margin-left:10rpx;
}

.userName{
  font:40rpx/60rpx "微软雅黑";
  color: #000;
}
.goods{
  font:28rpx/50rpx "微软雅黑";
  color: #000;
  display: flex;
  justify-content: space-between;
}
.goodsStatus{
  color:#ed2526;
}
.goodsPice{
  color:#ed2526;
}
.site{
  color:#cac6c6;
}
.time{
  color:#cac6c6;
}
.price{
  margin-left:30rpx;
}
.goodsDic{
  font-size: 28rpx;
}
.goodsDic text{
  text-indent: 2em;
}
