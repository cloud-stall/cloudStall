/* pages/publish/publish.wxss */
page{
  background: #F9F9F9;
}
.container{
  flex-wrap:wrap;
}
.logo{
  width:100%;
  height: 92rpx;
  text-align: center;
  padding:20rpx;
}
.logo image{
  width:248rpx;
  height: 90rpx;
}
.content-text{
  display: flex;
  padding:20rpx 24rpx;
}
.picker1,.picker{
  border:solid 1px #eee;
  border-radius: 12rpx;
  padding:10rpx 20rpx;
  width:42%;
  background: #fff;
}
.picker1{
  width:93%;
}
.space10{
  padding:0 20rpx
}
.left{
  width:188rpx;
  padding:10rpx 0rpx;
  text-align: right;
}
.right{
  flex:1;
  display: flex;
}
.price input{
  width:160rpx;
  height: 63rpx;
  border:solid 1px #eee;
  border-radius: 12rpx;
  padding-left:16rpx;
  background: #fff;
}
.price-text{
  padding: 0 0rpx 0 40rpx;
  line-height: 22rpx;
}
.map-site{
  width:100%;
  display: flex;
  flex-direction: row;
}
.bord{
  flex:2;
  background: #fff;
  font-size:26rpx;
  padding:0 10rpx;
  color: #999;
  line-height: 66rpx;
}
.oldNumber{
  margin-left: 60rpx;
  line-height: 52rpx;
  background: #fff;
  border:solid 1px #ccc;
  color:#999;
  padding:0rpx 20rpx;
  border-radius: 10rpx;
  font-size:28rpx;
}
.radio{
  margin-left:20rpx;
}
.select-btn{
  flex:1;
  font-size:28rpx;
  padding:0;
}
.newOrOld label{
  margin:0 15rpx 0 10rpx;
}
.textarea{
  flex:1;
  width:60%;
  background: #fff;
}
.checkbox{
  color: #ccc;
}
.checkbox text{
  color: #666;
}
/*图片*/
.question-images{
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.name input{
  width:60%;
  height: 63rpx;
  border:solid 1px #eee;
  border-radius: 12rpx;
  padding-left:16rpx;
  background: #fff;
}
.del{
  position: absolute;
  top:0;
  right:10rpx;
}
.q-image-wrap{
  flex:1;
  border:solid 1px #eee;
  background:#fff;
  border-radius: 10rpx;
  text-align: center;
  margin:10rpx 10rpx;
  padding:20rpx 0;
  height:270rpx;
  overflow: hidden;
  position: relative;
}
.q-image-wrap image{
  width:92%;
}
.publish button{
  width:80%;
  height: 80rpx;
  margin: 20rpx auto;
  text-align: center;
  font-size:36rpx;
  color:#fff;
  background: #F63737;
  margin-bottom:150rpx;
}
.textarea2{
  border:solid 1px #eee;
}
.textarea2 textarea{
  height: 186rpx;
  width:92%;
  padding:20rpx;
}
.red{
  color:#F63737;
}