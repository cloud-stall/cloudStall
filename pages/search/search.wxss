/* pages/search/search.wxss */
/*搜索*/
.search-main{
  width: 100%;
  display: flex;
  line-height: 60rpx;
}
.search{
  width:80%;
  height:60rpx;
  border:solid 1px #d5d5d5;
  border-radius: 32rpx;
  margin: 20rpx 0 20rpx 20rpx;
  vertical-align: top;
}
.icon-search{
  margin-left:32rpx;
  margin-top:16rpx;  
}

.search-main view:nth-child(1){
  flex: 5
}
.search-main view:nth-child(2){
  flex:1; 
  align-self: center;
  margin-left:20rpx;
}
.sousuo{
  width: 70%;
  display: inline-block;
  margin-left:20rpx;
  padding-top:7rpx;
  text-align: left;
  color:#999;
  vertical-align: top;
}

